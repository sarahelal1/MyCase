<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword">
    <TextView
        android:id="@+id/txt_insert_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_insert_pass"
        app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/navy_blue"
        app:layout_constraintVertical_bias="0.3" />
    <EditText
        android:id="@+id/pass_reset"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:background="@drawable/edt_background"
        android:hint="@string/pass_reset"
        android:paddingStart="20sp"
        android:drawableEnd="@drawable/baseline_remove_red_eye_24"
        android:paddingEnd="20sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_insert_pass"
        />

    <EditText
        android:id="@+id/pass_reset_conf"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/pass_reset"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:background="@drawable/edt_background"
        android:hint="@string/pass_reset_conf"
        android:paddingStart="20sp"
        android:drawableEnd="@drawable/baseline_remove_red_eye_24"
        android:paddingEnd="20sp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/basic_button"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/btn_save"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_reset_conf" />
</androidx.constraintlayout.widget.ConstraintLayout>