<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bank_cardFragment">

    <TextView
        android:id="@+id/text_pay1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.13"
        android:background="@drawable/top"
        android:gravity="center_vertical"
        android:text="@string/pay_request"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:padding="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/text_pay1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_pay1" />
    <TextView
        android:id="@+id/txt_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_pay1"
        app:layout_constraintStart_toStartOf="@id/text_pay1"
        android:padding="8dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:text="@string/add_bank_card"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toBottomOf="@id/txt_select"
        android:layout_margin="16dp"
        android:elevation="15dp"
        app:cardCornerRadius="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                android:padding="@dimen/_5sdp"
                android:layout_margin="16dp"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/_18ssp"
                android:background="@drawable/bkedit"
                android:inputType="text"
                android:hint="@string/enter_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                />
            <EditText
                android:id="@+id/ed_no"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                android:padding="@dimen/_5sdp"
                android:layout_margin="16dp"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/_18ssp"
                android:background="@drawable/bkedit"
                android:inputType="number"
                android:hint="@string/enter_number"
                app:layout_constraintTop_toBottomOf="@id/ed_name"
                app:layout_constraintStart_toStartOf="parent"
                />
            <EditText
                android:id="@+id/ed_month"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="30dp"
                android:layout_margin="16dp"
                android:textSize="@dimen/_18ssp"
                android:background="@drawable/bkedit"
                android:inputType="number"
                android:hint="@string/enter_month"
                app:layout_constraintTop_toBottomOf="@id/ed_no"
                app:layout_constraintStart_toStartOf="parent"
                />
            <EditText
                android:id="@+id/ed_year"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                android:padding="@dimen/_5sdp"
                android:layout_margin="16dp"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/_18ssp"
                android:background="@drawable/bkedit"
                android:inputType="number"
                android:hint="@string/enter_year"
                app:layout_constraintTop_toBottomOf="@id/ed_month"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/ed_cvv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                android:padding="@dimen/_5sdp"
                android:layout_margin="16dp"
                android:textSize="@dimen/_18ssp"
                android:background="@drawable/bkedit"
                android:inputType="number"
                android:hint="@string/enter_cvv_num"
                app:layout_constraintTop_toBottomOf="@id/ed_year"
                app:layout_constraintStart_toStartOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        app:cornerRadius="15dp"
        android:elevation="5dp"
        android:textAllCaps="false"
        android:textSize="@dimen/_18ssp"
        android:paddingVertical="12dp"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintHeight_percent="0.08"
        android:layout_margin="16dp"
        >
        <ImageView
            android:id="@+id/master"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/master_card"
            app:layout_constraintBottom_toBottomOf="@+id/text_pay1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_pay1" />
        <ImageView
            android:id="@+id/visa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/visa"
            app:layout_constraintBottom_toBottomOf="@+id/text_pay1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_pay1" />
        <ImageView
            android:id="@+id/meeza"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/meeza"
            app:layout_constraintBottom_toBottomOf="@+id/text_pay1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_pay1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>