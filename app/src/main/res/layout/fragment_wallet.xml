<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".walletFragment">


    <TextView
        android:id="@+id/text_pay1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.13"
        android:background="@drawable/top"
        android:gravity="center_vertical"
        android:text="@string/pay_request"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:padding="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/text_pay1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_pay1" />
    <TextView
        android:id="@+id/txt_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_pay1"
        app:layout_constraintStart_toStartOf="@id/text_pay1"
        android:padding="8dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:text="@string/add_number"
        />


            <EditText
                android:id="@+id/ed_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.08"
                android:padding="@dimen/_5sdp"
                android:layout_margin="16dp"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/_18ssp"
                android:background="@drawable/bkedit"
                android:inputType="number"
                android:hint="@string/phone_number"
                app:layout_constraintTop_toBottomOf="@id/txt_select"
                app:layout_constraintStart_toStartOf="parent"

                />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:elevation="5dp"
        android:paddingVertical="12dp"
        android:text="@string/enter"
        android:textAllCaps="false"
        android:textSize="@dimen/_18ssp"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_number" />

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintHeight_percent="0.1"
        android:layout_margin="16dp"
        >
        <ImageView
            android:id="@+id/we"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/we"
            app:layout_constraintBottom_toBottomOf="@+id/text_pay1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_pay1" />
        <ImageView
            android:id="@+id/orange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/orange"
            app:layout_constraintBottom_toBottomOf="@+id/text_pay1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_pay1" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintHeight_percent="0.1"
        android:layout_margin="16dp"
        >
        <ImageView
            android:id="@+id/etisalat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/etisalat"
            app:layout_constraintBottom_toBottomOf="@+id/text_pay1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_pay1" />
        <ImageView
            android:id="@+id/voda"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/voda"
            app:layout_constraintBottom_toBottomOf="@+id/text_pay1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_pay1" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>