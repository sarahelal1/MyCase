<?xml version="1.0" encoding="utf-8"?>
    
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".paymentsFragment">

    <TextView
        android:id="@+id/text_payments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.13"
        android:background="@drawable/top"
        android:gravity="center_vertical"
        android:text="@string/payments"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:padding="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_8sdp"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintBottom_toBottomOf="@+id/text_payments"
        app:layout_constraintEnd_toEndO="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_payments" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_paid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:text="@string/paid_requests"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:backgroundTint="@color/white"
        app:cornerRadius="8dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_payments"
        app:layout_constraintStart_toStartOf="parent"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:text="@string/pay_request"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:backgroundTint="@color/white"
        app:cornerRadius="8dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_paid"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>